<div class="tab-pane" id="host-general-info">
  <input type="hidden" name="host[_id]" value="<%= @server_info["server"]["host"]["_id"] %>"/>
  <input type="hidden" name="host[server_id]" value="<%= @server_info["server"]["_id"]%>"/>
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span2"><%= label_tag "host[hostname]","Hostname" %></div>
      <div class="span8"><%= text_field_tag "host[hostname]",@server_info["server"]["host"]["hostname"],:class=>"span6" %></div>
    </div>
    <div class="row-fluid">
      <div class="span2"><%= label_tag "host[domainname]","Domainname" %></div>
      <div class="span8"><%= text_field_tag "host[domainname]",@server_info["server"]["host"]["domainname"],:class =>"span6" %></div>
    </div>
    <div class="row-fluid">
      <div class="span2"><%= label_tag "host[environments]","Environment" %></div>
      <div class="span8"><%= select_tag "host[environments]",options_for_select(@environments,:selected=>@server_info["server"]["host"]["environments"],:disabled=>["INVENTORY"]),:class=>"span6" %></div>
    </div>
  </div>
</div>
