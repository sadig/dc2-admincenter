<% content_for :titleinformation do %>
  Backend "<%= @dcb.title %>" active
<% end %>
<% content_for :extra_head do %>
  <%= javascript_include_tag "backends/main" %>
<% end %>

<div id="dc_<%= @dcb.id %>" class="row-fluid">
  <div class="container-fluid">
    <div class="span12">
      <ul class="nav nav-tabs" id="inventory">
        <LI><a href="#servers" data-toggle="tab">Servers</a></LI>
        <LI><a href="#hosts" data-toggle="tab">Hosts</a></LI>
        <LI><a href="#deployment-control" data-toggle="tab">Deployment Control</a></LI>
      </UL>
      <div class="tab-content">
        <div class="tab-pane active" id="servers" data-dc-record="<%= url_for :controller => "/backends/servers", :backend_id => @dcb.id %>">
          <div class="container-fluid">
            <div class="row-fluid">
              <div class="span12">
                <%= render "backends/list_servers" %>
              </div>
            </div>
          </div>
        </div>
        <div class="tab-pane" id="hosts" data-dc-record="<%= url_for :controller => '/backends/hosts', :backend_id => @dcb.id %>">
          <div class="container-fluid">
            <div class="row-fluid">
              <div class="span12">
                <%= render 'backends/list_hosts' %>
              </div>
            </div>
          </div>
        </div>
        <div class="tab-pane" id='deployment-control' data-dc-record="<%= url_for :controller => '/backends/deployments', :backend_id => @dcb.id %>">
          <div class="container-fluid">
            <div class="row-fluid">
              <div class="span12">
                <%= render 'backends/list_deploy_control' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

