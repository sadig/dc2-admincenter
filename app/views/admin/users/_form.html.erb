  <%= form_for [:admin, @user], :class=>"well form-vertical" do |f| %>
    <%= f.label :username, "Username" %>
    <% if @user.username == nil %>
      <%= f.text_field :username, :class => "span3", :placeholder=>"Username" %>
    <% else %>
      <%= f.text_field :username, :class => "span3", :readonly => true , :disabled=>true %>
    <% end %>
  <%= f.label :password,"Password" %>
  <%= f.password_field :password, :class => "span3", :placeholder => "Password" %>
  <%= f.label :firstame,"Firstname" %>
  <%= f.text_field :firstname, :class => "span3", :placeholder => "Firstname" %>
  <%= f.label :lastname, "Lastname" %>
  <%= f.text_field :lastname, :class => "span3", :placeholder =>"Lastname" %>
  <%= f.label :is_admin, :class => "checkbox" do %>
    <%= f.check_box :is_admin %> Admin Rights
  <% end %>
  <%= f.submit :class=>"btn btn-primary" %> <%= link_to "Cancel", admin_users_path, :class=>"btn" %>
<% end %>
